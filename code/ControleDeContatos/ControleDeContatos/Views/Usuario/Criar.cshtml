@using ControleDeContatos.Models.Enum;
@model UsuarioModel
@{
    ViewData["title"] = "Cadastro de Usuário";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["title"]</h1>
</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">

  <div class="form-group mb-2">
      <label for="nome">Nome</label>
      <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário" />
      @Html.ValidationMessageFor(x => x.Nome)
  </div>

  <div class="form-group mb-2">
      <label for="email">Login</label>
      <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login do usuário" />
      @Html.ValidationMessageFor(x => x.Login)
  </div>

  <div class="form-group mb-2">
      <label for="celular">E-Mail</label>
      <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário" />
      @Html.ValidationMessageFor(x => x.Email)
  </div>

  <div class="form-group mb-2">
      <label for="celular">Senha</label>
      <input type="password" asp-for="Senha" class="form-control" placeholder="Digite o senha do usuário" />
      @Html.ValidationMessageFor(x => x.Senha)
  </div>

  <div class="form-group mb-2">
      <label for="celular">Perfil</label>
      <select asp-for="Perfil" class="form-control">
          <option value="0">Selecione</option>
          <option value="@PerfilEnum.Admin">Adiministrador</option>
          <option value="@PerfilEnum.Padrao">Padrão</option>
      </select>
  </div>

  <button type="submit" class="btn btn-primary btn-block">Enviar</button>

  <a class="btn btn-secondary btn-block" asp-controller="Usuario" asp-action="Index" role="button">VOLTAR</a>

</form>
